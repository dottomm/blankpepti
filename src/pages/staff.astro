---
import Layout from '../layouts/Layout.astro';
import CTAButton from '../components/CTAButton.astro';
import SideBar from '../components/SideBar.astro';

import { getEntryBySlug } from "astro:content";
const entry = await getEntryBySlug("staff", "index");
const {cde, staff, cdestaff,  title, team, implementation  } = entry.data;

---

<Layout title='staff' >
  <section class="sectionStaffHead">
    <h1> {title} </h1>
    <CTAButton title="Get Involved" href="/contact" body="Get Involved! Join Our Team" />
  </section>
  <section class="staff" id='staff'>
    <div class="container">
      <div class="staffWrapper">
        {staff?.map((staff) => (
            <div class="col-12 mt-6 md:col-6">
              <div class="">
                
                <img src={staff.image} alt={staff.name}/>
                
                  <h4>{staff.name} </h4>
                  <div class="nameTitle">
                <p>{staff.title}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
  <section class='sectionStatewide' id="sectionStatewide">
    <h2>{implementation.title}</h2>
    <div class="container">
      <div class="staffWrapper">
        {team?.map((team)=> (
          <div class="col-12 mt-6 md:col-6">
              <div class="">
                
                <img src={team.image} alt={team.name}/>
                
                  <h4>{team.name} </h4>
                  
                  <div class="nameTitle">
                    {team.titlename}
                  
                </div>
              </div>
            </div>
        ))}
      </div>
    </div>
  </section>
  
  <section class='sectionCDE' id='sectionCDE'>
    <h2>{cde.title}</h2>
    <div class="container">
      <div class="staffWrapper">
        {cdestaff?.map((cdestaff) => ( 
            <div class="">
              <div class="">
                
                <img src={cdestaff.image} alt={cdestaff.name}/>
                
                  <h4>{cdestaff.name} </h4>
                 
                  <div class="nameTitle">
                    {cdestaff.title.map((item) => (
                    <div>{item.titlename}</div>
                    ))}
                </div>

              </div>
            </div>
        ))
        }
      
    </div>
  </div>
</section>

  <div slot="sideslot">

    <SideBar />

    </div>

</Layout>

<style>
  .staffWrapper{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-evenly;
    line-height:100%;
    color:var(--PolynesianBlue);
  }

 
  .staffWrapper > div{
    width:250px;
    text-align:center;
    margin:1.5em;

  }
  
  .nameTitle{
    font-size: .69em;
    line-height:132%;
  }
</style>